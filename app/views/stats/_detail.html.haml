=player.modal_link

%div.modal.fade{id: "player_#{player.id}", "aria-hidden" => "true", "aria-labelledby" => player.name, :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title
          =player.title
          %span.badge=stat.year
          %span.label.label-info=player.position
      .modal-body
        %table.table.table-compressed.table-hover
          %thead
            - player.teams.each do |team|
              %tr
                %td
                  %strong.label.label-default Division
                %td=team.division.name
                %td
                  %strong.label.label-default League
                %td=team.division.league.name
          %tbody= stat.all_as_rows
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
