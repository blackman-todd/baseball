%table.table.table-striped.table-hover
  %thead
    %tr
      %td
      %td Name
      %td Batting Average
      %td Home Runs
      %td RBI
      %td Runs
      %td Stolen Bases
      %td OPS
  %tbody
    - @stats.each_with_index do |stat, index|
      %tr
        %td= index+1
        %td= stat.player.surname
        %td= stat.batting_average
        %td= stat.home_runs
        %td= stat.rbi
        %td= stat.runs
        %td= stat.stolen_bases
        %td= stat.ops
